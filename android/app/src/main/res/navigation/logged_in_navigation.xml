<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logged_in_navigation"
            app:startDestination="@id/loggedInFragment">

    <fragment
        android:name="com.hedvig.android.owldroid.ui.loggedin.LoggedInFragment"
        android:id="@+id/loggedInFragment">

        <action
            android:id="@+id/action_dashboardFragment_to_trustlyFragment"
            app:destination="@id/trustlyFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_commonClaimsFragment"
            app:destination="@+id/claimsCommonClaimFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_in_down"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_emergencyFragment"
            app:destination="@+id/claimsEmergencyFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_in_down"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_referralFragment"
            app:destination="@id/referralFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_myInfoFragment"
            app:destination="@+id/myInfoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_myHomeFragment"
            app:destination="@id/myHomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_coinsuredFragment"
            app:destination="@+id/coinsuredFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_charityFragment"
            app:destination="@id/charityFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

        <action
            android:id="@+id/action_loggedInFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/loggedInFragment"/>

    </fragment>

    <fragment
        android:id="@+id/trustlyFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.payment.TrustlyFragment"
        android:label="TrustlyFragment"/>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.hedvig.app.react.chat.ChatFragment"
        android:label="ChatFragment"/>

    <fragment
        android:id="@+id/claimsCommonClaimFragment"
        android:name="com.hedvig.android.owldroid.feature.claims.ui.commonclaim.CommonClaimFragment"
        android:label="QuickActionFragment">

        <action
            android:id="@+id/action_claimsCommonClaimFragment_to_chatFragment"
            app:destination="@+id/chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/claimsCommonClaimFragment"/>

    </fragment>

    <fragment
        android:id="@+id/claimsEmergencyFragment"
        android:name="com.hedvig.android.owldroid.feature.claims.ui.commonclaim.EmergencyFragment"
        android:label="QuickActionFragment">

        <action
            android:id="@+id/action_claimsEmergencyFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/claimsEmergencyFragment"/>

    </fragment>

    <fragment
        android:id="@+id/referralFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.referral.ReferralFragment"
        android:label="ReferralFragment"/>

    <fragment
        android:id="@+id/myInfoFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.myinfo.MyInfoFragment"
        android:label="MyInfoFragment"/>

    <fragment
        android:id="@+id/myHomeFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.myhome.MyHomeFragment"
        android:label="MyHomeFragment">

        <action
            android:id="@+id/action_myHomeFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/myHomeFragment"/>

    </fragment>

    <fragment
        android:id="@+id/coinsuredFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.coinsured.CoinsuredFragment"
        android:label="CoinsuredFragment"/>

    <fragment
        android:id="@+id/charityFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.charity.CharityFragment"
        android:label="CharityFragment"/>

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.payment.PaymentFragment"
        android:label="PaymentFragment">

        <action
            android:id="@+id/action_paymentFragment_to_trustlyFragment"
            app:destination="@id/trustlyFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/paymentFragment"/>
    </fragment>

    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.feedback.FeedbackFragment"
        android:label="FeedbackFragment"/>

    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.aboutapp.AboutAppFragment"
        android:label="AboutAppFragment">

        <action
            android:id="@+id/action_aboutAppFragment_to_licensesFragment"
            app:destination="@id/licensesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/aboutAppFragment"/>
    </fragment>

    <fragment
        android:id="@+id/licensesFragment"
        android:name="com.hedvig.android.owldroid.feature.profile.ui.aboutapp.LicensesFragment"
        android:label="LicensesFragment"/>
</navigation>