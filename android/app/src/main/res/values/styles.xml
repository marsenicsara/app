<resources>

    <style name="Theme.Exponent.Light.V21" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Exponent.Light" parent="Theme.Exponent.Light.V21" />

    <style name="Theme.Exponent.Splash" parent="Theme.Exponent.Light">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ProfileHeader">
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="AppBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/off_white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="SectionHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileFieldLabel">
        <item name="android:textColor">@color/off_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/circular_book</item>
    </style>

    <style name="ProfileField" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/ProfileFieldLabel</item>
        <item name="colorControlActivated">@color/purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="HedvigButton">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/off_white</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay.ExpandedTitle">
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay.CollapsedTitle">
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="AppTheme.MenuItem">
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionMenuTextColor">@color/purple</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MenuItem</item>
    </style>

    <style name="DialogButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/circular_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrustlyTitle">
        <item name="android:fontFamily">@font/soray_extrabold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="TrustlyParagraph">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="ProfileField.ValidationError">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_fragment_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="CircularToolbarTheme" parent="AppTheme.PopupOverlay">
        <item name="android:fontFamily">@font/circular_medium</item>
    </style>

    <style name="PerilBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/PerilBottomSheet</item>
    </style>

    <style name="PerilBottomSheet">
        <item name="android:background">@drawable/peril_bottom_sheet_background</item>
    </style>

    <style name="NoTitleBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/NoTitleBottomSheet</item>
    </style>

    <style name="NoTitleBottomSheet">
        <item name="android:background">@drawable/bottom_sheet_dialog_no_title_fragment_background</item>
    </style>

    <style name="LoadingSpinner" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="SmallButton">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/button_small</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NavigationBar" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/blur_white</item>
        <item name="enforceTextAppearance">true</item>
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="itemTextAppearanceInactive">@style/TabBar</item>
        <item name="itemTextAppearanceActive">@style/TabBar</item>
    </style>
</resources>
